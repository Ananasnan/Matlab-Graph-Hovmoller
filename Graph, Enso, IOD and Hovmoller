%Extracting IODM Data From Base Data
s97 = slalong(:,:,9);
s06 = slalong(:,:,117);
s12 = slalong(:,:,189);
s15 = slalong(:,:,225);
s98 = slalong(:,:,21);
s10 = slalong(:,:,165);
s14 = slalong(:,:,213);
s16 = slalong(:,:,237);

%Creating IODM Averaged SLHA Map
iodp = ((s06+s12+s15+s97)/4);
iodm = ((s98+s10+s14+s16)/4);

%Creating IODM Map
piodm = pcolor(lon, lat, iodm);
hold on
plot(c.long, c.lat, 'k');
xlabel('Longitude');
ylabel('Latitude');
colorbar;
title('Rata-Rata IOD Negatif(-)');
piodm.EdgeColor = 'none';
piodm.FaceColor = 'interp';

piodp = pcolor(lon, lat, iodp);
hold on
plot(c.long, c.lat, 'k');
xlabel('Longitude');
ylabel('Latitude');
colorbar;
title('Rata-Rata IOD Positif(+)');
piodp.EdgeColor = 'none';
piodp.FaceColor = 'interp';

