%Creating StDev Data From Base Data
j = slalong(:,:,1:12:252);
f = slalong(:,:,2:12:252);
m = slalong(:,:,3:12:252);
a = slalong(:,:,4:12:252);
me = slalong(:,:,5:12:252);
jn = slalong(:,:,6:12:252);
jl = slalong(:,:,7:12:252);
ag = slalong(:,:,8:12:252);
s = slalong(:,:,9:12:252);
o = slalong(:,:,10:12:252);
n = slalong(:,:,11:12:252);
d = slalong(:,:,12:12:252);

j = std(j, 0, [3]);
f = std(f, 0, [3]);
m = std(m, 0, [3]);
a = std(a, 0, [3]);
me = std(me, 0, [3]);
jn = std(jn, 0, [3]);
jl = std(jl, 0, [3]);
ag = std(ag, 0, [3]);
s = std(s, 0, [3]);
o = std(o, 0, [3]);
n = std(n, 0, [3]);
d = std(d, 0, [3]);

